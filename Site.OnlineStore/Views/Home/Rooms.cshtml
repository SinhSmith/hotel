
@{
    ViewBag.Title = "Giới Thiệu Phòng";
}

<!--room start here-->
<div class="rooms">
    <div class="container">
        <div class="rooms-main">
            <div class="room-head">
                <h3>Các loại phòng</h3>
            </div>
            <div class="rooms-top">
                <div class="rooms-left wow slideInLeft" data-wow-delay="0.3s">
                    <div class="col-md-4 rooms-text">
                        <h2><a>Phòng đơn</a></h2>
                        <p>Giá : </p>
                        <p>Diện Tích: </p>
                        <p>Giường: </p>
                        <p>Tiện nghi: Điều hòa nhiệt độ, Tủ lạnh, Nóng lạnh, Tủ quần áo, Internet tốc độ cao</p>
                    </div>
                    <div class="col-md-8 rooms-img">
                        <div class="luxury-block">
                            <a> <img src="~/Content/images/r1.jpg" alt="" class="img-responsive"></a>
                        </div>
                        <div class="room-images-list" data-chocolat-title="Phòng đơn">
                            <a class="chocolat-image" href="~/Content/Images/HotelImages/IMG_2676-Pano.jpg" title="Phòng đơn">
                                <img width="100" height="100" src="~/Content/Images/HotelImages/IMG_2676-Pano_small350.png" />
                            </a>
                            <a class="chocolat-image" href="~/Content/Images/HotelImages/IMG_2672.jpg" title="Phòng đơn">
                                <img width="100" height="100" src="~/Content/Images/HotelImages/IMG_2672_small350.png" />
                            </a>
                            <a class="chocolat-image" href="~/Content/Images/HotelImages/IMG_2681.jpg" title="Phòng đơn">
                                <img width="100" height="100" src="~/Content/Images/HotelImages/IMG_2681_small350.png" />
                            </a>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="rooms-left1 wow slideInRight" data-wow-delay="0.3s">
                    <div class="col-md-8 rooms-img ulta-img">
                        <a> <img src="~/Content/images/r2.jpg" alt="" class="img-responsive"></a>
                        <div class="room-images-list" data-chocolat-title="Phòng đơn">
                            <a class="chocolat-image" href="~/Content/Images/HotelImages/IMG_2676-Pano.jpg" title="Phòng đơn">
                                <img width="100" height="100" src="~/Content/Images/HotelImages/IMG_2676-Pano_small350.png" />
                            </a>
                            <a class="chocolat-image" href="~/Content/Images/HotelImages/IMG_2672.jpg" title="Phòng đơn">
                                <img width="100" height="100" src="~/Content/Images/HotelImages/IMG_2672_small350.png" />
                            </a>
                            <a class="chocolat-image" href="~/Content/Images/HotelImages/IMG_2681.jpg" title="Phòng đơn">
                                <img width="100" height="100" src="~/Content/Images/HotelImages/IMG_2681_small350.png" />
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4 rooms-text ulta-text">
                        <h3><a>Phòng đôi</a></h3>
                        <p>Giá : </p>
                        <p>Diện Tích: </p>
                        <p>Giường: 2</p>
                        <p>Tiện nghi: Điều hòa nhiệt độ, Tủ lạnh, Nóng lạnh, Tủ quần áo, Internet tốc độ cao</p>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

@section LocalStyles{
<link href="~/Content/css/chocolat.css" rel="stylesheet" />
}

@section LocalScripts{
<script src="~/Scripts/common/jquery.chocolat.js"></script>
<script type="text/javascript" charset="utf-8">
		$(function() {
		    $('.gallery-grid a').Chocolat();
		    $('.room-images-list a').Chocolat();
		});
</script>
}
